<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xgame.service.manager.db.dao.BroadcastDao">


    <select id="getAll" resultType="com.xgame.service.manager.db.dto.BroadCastDto">
          <![CDATA[
            SELECT transection,server_id,msg,send_user,indate from broadcast_info order by indate desc
        ]]>

    </select>
    <insert id="saveObject" parameterType="com.xgame.service.manager.db.dto.BroadCastDto"  keyProperty="tansection" useGeneratedKeys="true">
            <![CDATA[
           INSERT  into broadcast_info (server_id,msg,send_user,indate)
           values(#{server_id},#{msg},#{send_user},#{indate})
        ]]>
    </insert>


    <delete id="deleteById">
        <![CDATA[
            delete from broadcast_info where transection=#{transection}
        ]]>
    </delete>
    <select id="getRegularTasks" resultType="com.xgame.service.manager.db.dto.BroadCastRegularDto">
        <![CDATA[
            SELECT transection,uid,server_id,indate,next_send_date,msg,freq_unit,freq_val,start_date,end_date from broadcast_regular order by indate desc
        ]]>

    </select>
    <insert id="saveRegularTask" parameterType="com.xgame.service.manager.db.dto.BroadCastRegularDto"  keyProperty="transection" useGeneratedKeys="true">
        <![CDATA[
           INSERT  into broadcast_regular (uid,server_id,indate,next_send_date,msg,freq_unit,freq_val,start_date,end_date)
           values(#{uid},#{server_id},#{indate},#{next_send_date},#{msg},#{freq_unit},#{freq_val},#{start_date},#{end_date})
        ]]>
    </insert>
    <update id="updateRegularTaskById" parameterType="com.xgame.service.manager.db.dto.BroadCastRegularDto">
           <![CDATA[
            UPDATE broadcast_regular set next_send_date=#{next_send_date},start_date=#{start_date},end_date=#{end_date} WHERE transection = #{transection}
        ]]>
    </update>
    <delete id="deleteRegularTaskById">
        <![CDATA[
            delete from broadcast_regular where transection=#{transection}
        ]]>
    </delete>
</mapper>